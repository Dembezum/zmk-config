/ {
    macros {
        // Danish macros
        dkLBKT: dkLBKT {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp RALT>,
                <&macro_tap>,
                <&kp N8>,
                <&macro_release>,
                <&kp RALT>;
        };

        dkRBKT: dkRBKT {
